<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0"
	localization="en_us">
	<OCD id="de.tum.in.python.bluetooth.milling-machine" name="Bluetooth Milling Machine"
		description="Settings for the communication with Bluetooth Enabled Milling Machines.">

		<Icon
			resource="http://icons.iconarchive.com/icons/alecive/flatwoken/128/Apps-Bluetooth-Active-icon.png"
			size="32" />

		<AD id="bluetooh.milling.machines" name="bluetooh.milling.machines"
			type="String" cardinality="0" required="true"
			default="00:1A:7D:DA:71:15#50:1B:7D:AA:92:11"
			description="Configurable property to set list of bluetooth enabled milling machines to be discovered (Separated by #)" />


	</OCD>
	<Designate pid="de.tum.in.python.bluetooth.milling-machine">
		<Object ocdref="de.tum.in.python.bluetooth.milling-machine" />
	</Designate>
</MetaData>
