<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" name="de.tum.in.bluetooth" configuration-policy="require" activate="activate" deactivate="deactivate">
    <implementation class="de.tum.in.bluetooth.discovery.BluetoothDeviceDiscovery"/>
    <service servicefactory="false">
        <provide interface="de.tum.in.bluetooth.BluetoothController"/>
    </service>
    <property name="service.pid" value="de.tum.in.bluetooth"/>
    <reference name="m_activityLogService" interface="de.tum.in.activity.log.IActivityLogService" cardinality="1..1" policy="static" bind="bindActivityLogService" unbind="unbindActivityLogService"/>
    <reference name="m_cloudService" interface="org.eclipse.kura.cloud.CloudService" cardinality="1..1" policy="static" bind="bindCloudService" unbind="unbindCloudService"/>
    <reference name="m_configurationService" interface="org.eclipse.kura.configuration.ConfigurationService" cardinality="1..1" policy="static" bind="bindConfigurationService" unbind="unbindConfigurationService"/>
</scr:component>
